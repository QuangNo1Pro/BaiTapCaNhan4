<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Game Server</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Game Server</a>
            <div class="d-flex" style="gap:5px">
                <button id="create-room-btn" class="btn btn-primary me-2">Tạo Bàn Cờ</button>
                <button id="leaderboard-btn" class="btn btn-success">Bảng Xếp Hạng</button>
                <button id="logout-btn" class="btn btn-danger">Logout</button>
            </div>
        </div>
    </nav>
    <div class="container mt-5" id="welcome-message">
        <div class="card text-center shadow-lg">
            <div class="card-header bg-primary text-white">
                <h2><i class="bi bi-hand-thumbs-up"></i> Xin Chào!</h2>
            </div>
            <div class="card-body">
                <h4 class="card-title text-success">Chào mừng bạn,</h4>
                <h3 class="card-text text-primary fw-bold">{{username.username}}</h3>
            </div>
        </div>
    </div>

    <!-- Main Layout -->
    <div class="container-fluid mt-3">
        <div class="row">
            <!-- Sidebar: Danh sách người dùng online -->
            <div class="col-md-3">
                <div class="card">
                    <div class="card-header text-center bg-info text-white">
                        <h5 class="mb-0">Người Dùng Online</h5>
                    </div>
                    <div class="card-body p-0">
                        <table class="table table-striped mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Name</th>
                                    <td>Nickname</td>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each onlineUsers}}
                                <tr>
                                    <td>{{this.username}}</td>
                                    <td>{{this.nickname}}</td>
                                    <td>{{this.status}}</td>
                                </tr>
                                {{else}}
                                <tr>
                                    <td colspan="2" class="text-center">Không có người dùng online.</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Nội dung chính: Danh sách bàn cờ -->
            <div class="col-md-9">
                <div class="card">
                    <div class="card-header text-center bg-primary text-white">
                        <h5 class="mb-0">Danh Sách Các Bàn Cờ</h5>
                    </div>
                    <div class="card-body p-0">
                        <table class="table table-bordered mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th>Tên Bàn</th>
                                    <th>Người Tạo</th>
                                    <th>Số Người Chơi</th>
                                    <th>Tham Gia</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each gameRooms}}
                                <tr>
                                    <td>{{this.roomName}}</td>
                                    <td>{{this.owner}}</td>
                                    <td>{{this.players}}/2</td>
                                    <td>
                                        <button class="btn btn-sm btn-primary join-room-btn"
                                            data-room-id="{{this.id}}">Tham Gia</button>
                                    </td>
                                </tr>
                                {{else}}
                                <tr>
                                    <td colspan="4" class="text-center">Không có bàn cờ nào.</td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Bảng Xếp Hạng -->
    <div class="modal fade" id="leaderboard-modal" tabindex="-1" aria-labelledby="leaderboard-modal-label"
        aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="leaderboard-modal-label">Bảng Xếp Hạng</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Rank</th>
                                <th>Nickname</th>
                                <th>Score</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each users}}
                            <tr>
                                <td>{{rank @index }}</td>
                                <td>{{this.nickname}}</td>
                                <td>{{this.score}}</td>
                            </tr>
                            {{else}}
                            <tr>
                                <td colspan="3" class="text-center">Không có dữ liệu bảng xếp hạng.</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        setTimeout(() => {
                const welcomeMessage = document.getElementById('welcome-message');
                if (welcomeMessage) {
                    welcomeMessage.style.transition = "opacity 0.5s ease"; // Thêm hiệu ứng mờ dần
                    welcomeMessage.style.opacity = "0"; // Mờ dần
                    setTimeout(() => welcomeMessage.style.display = "none", 500); // Sau khi mờ, ẩn hoàn toàn
                }
            }, 2000);
        // Hiển thị Modal khi nhấn nút "Bảng Xếp Hạng"
        document.getElementById('leaderboard-btn').addEventListener('click', () => {
            const modal = new bootstrap.Modal(document.getElementById('leaderboard-modal'));
            modal.show();
        });
        function getTokenFromUrl() {
                const urlParams = new URLSearchParams(window.location.search);
                return urlParams.get('token');  // Lấy giá trị của tham số 'token'
        }

        // Logout
        document.getElementById('logout-btn').addEventListener('click', async function () {
                try {
                    const token = getTokenFromUrl();  
                    console.log('Token nhận được:', token);

                    if (token) {
                        const response = await fetch('https://localhost:53003/auth/logout', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json',
                                'Authorization': `Bearer ${token}` // Gửi JWT token qua header
                            }
                        });

                        console.log('Response từ auth server:', response);
                        if (!response.ok) {
                            throw new Error('Không thể logout. Vui lòng thử lại!');
                        }

                        const data = await response.json();
                        console.log('Dữ liệu từ auth server:', data);

                        // Sau khi logout thành công, chuyển hướng về trang login
                        window.location.href = 'https://localhost:53003/auth/login';
                    } else {
                        alert('Không tìm thấy token. Bạn sẽ được chuyển hướng đến trang đăng nhập.');
                        // Chuyển hướng đến trang login nếu không có token
                        window.location.href = 'https://localhost:53003/auth/login';
                    }
                } catch (error) {
                    console.error('Lỗi khi gửi yêu cầu logout:', error);
                    alert('Có lỗi xảy ra khi đăng xuất. Vui lòng thử lại.');
                }
            });
    </script>

</body>

</html>